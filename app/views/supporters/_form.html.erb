<%= simple_form_for @supporter, id: 'sign-from' do |f| %>
  <%= f.hidden_field :area %>
  <%= f.input :first_name, placeholder: 'Весела' %>
  <%= f.input :last_name, placeholder: 'Радостинова' %>
  <%= f.input :email, placeholder: 'vesela@radostinova.com' %>
  <%= f.input :organization, placeholder: 'Вашата организация' %>
  <%= f.input :is_organization %>
  <%= f.button :submit, 'Подкрепи', class: 'button standart green' %>
<% end %>
